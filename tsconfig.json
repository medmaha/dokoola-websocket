// Use for express-typescript app
{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true
  }
}
